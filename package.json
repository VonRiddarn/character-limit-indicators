{
  "name": "character-limit-indicators",
  "displayName": "Character Limit Indicators",
  "description": "A simple, no overengineered bs, line width indicator for VSCode.",
  "version": "0.0.1",
  "pricing": "Free",
  "author": {
	"name": "Timmy Öhman",
	"url": "https://github.com/VonRiddarn"
  },
  "publisher": "VonRiddarn",
  "homepage": "https://github.com/VonRiddarn/character-limit-indicators",
  "repository": {
	"type": "git",
	"url": "https://github.com/VonRiddarn/character-limit-indicators"
  },
  "bugs": {
	"url": "https://github.com/VonRiddarn/character-limit-indicators/issues"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.96.0"
  },
  "keywords": [
	"Visual",
	"Line",
	"Character",
	"Limit"
  ],
  "categories": [
    "Other",
	"Formatters",
	"Linters",
	"Visualization"
  ],
  "activationEvents": [
	"onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
	"configuration":[
		{
			"title": "Hard Indicator",
			"order": 0,
			"properties":{
				"characterLimitIndicators.indicators.hard.style": {
					"type": "string",
					"default": "block",
					"enum": [
						"block",
						"line"
					],
					"enumDescriptions": [
						"Visualization: █",
						"Visualization: |"
					],
					"description": "How the indicator is to be displayed in the editor window."
				},
				"haracterLimitIndicators.indicators.hard.color": {
					"type":"string",
					"default":"#d1265180",
					"description": "The color of the hard indicator represented by hex.\nAccepted formats: #RGB\t#RRGGBB\t#RRGGBBTT"
				}
			}
		},
		{
			"title": "Soft Indicator",
			"order": 1,
			"properties":{
				"placeholder":{
					"type": "object"
				}
			}
		},
		{
			"title": "Countdown",
			"order": 2,
			"properties":{
				"placeholder":{
					"type": "object"
				}
			}
		}

	],
    "commands": [
      {
        "command": "character-limit-indicators.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
